<%include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>this is the campgrounds page</h1>
      <p>View our hand picked campgrounds from all over the world</p>
      <p>
        <a href="/campgrounds/new" class='btn btn-primary btn-large'>add a new campground</a>
      </p>
    </div>
  </header>
  <div class="row">
    <div class="col-lg-12">
      <h3>Our most popular sites</h3>
    </div>
  </div>
  <div class="row" style="display:flex; flex-wrap: wrap;">
    <%campgrounds.forEach(c => {%>
      <div class='col-md-3 col-sm-6'>
        <div class='thumbnail'>
          <img src="<%=c.image%>">
          <div class="caption" style="text-align:center;">
            <h4><%= c.name%></h4>
            <p>
              <a href='/campgrounds/<%= c.id%>' class='btn btn-primary'>More Info</a>
            </p>
          </div>
        </div>
      </div>
    <%});%>
  </div>

</div>



<%include ../partials/footer %>
